{{! <!--  eslint-disable @html-eslint/require-li-container --> }}
<li class="combatant {{ css }}" data-combatant-id="{{ id }}">
    {{!-- Foundry TODO: Targets --}}

    {{!-- Image --}}
    <img class="token-image" src="{{ img }}" alt="{{ name }}" loading="lazy">

    {{!-- Name & Controls --}}
    <div class="token-name">
        <strong class="name">
            {{#if isLeader}}<i class="fa-solid fa-helmet-battle"></i>{{/if}}
            {{ name }}
        </strong>
        <div class="combatant-controls">
            {{#if @root.user.isGM}}
                <button type="button"
                        class="inline-control combatant-control icon fa-solid fa-eye-slash {{#if hidden}}active{{/if}}"
                        data-action="toggleHidden" data-tooltip="COMBAT.ToggleVis"
                        aria-label="{{ localize " COMBAT.ToggleVis" }}"></button>
                <button type="button"
                        class="inline-control combatant-control icon fa-solid fa-skull {{#if isDefeated}}active{{/if}}"
                        data-action="toggleDefeated" data-tooltip="COMBAT.ToggleDead"
                        aria-label="{{ localize " COMBAT.ToggleDead" }}"></button>
            {{/if}}
            {{#if canPing}}
                <button type="button" class="inline-control combatant-control icon fa-solid fa-bullseye-arrow"
                        data-action="pingCombatant" data-tooltip="COMBAT.PingCombatant"
                        aria-label="{{ localize " COMBAT.PingCombatant" }}"></button>
            {{/if}}
            {{#unless @root.user.isGM}}
                <button type="button" class="inline-control combatant-control icon fa-solid fa-arrows-to-eye"
                        data-action="panToCombatant" data-tooltip="COMBAT.PanToCombatant"
                        aria-label="{{ localize " COMBAT.PanToCombatant" }}"></button>
            {{/unless}}
            {{#if @root.combat.started}}
                {{#if (and active isOwner)}}
                    {{#unless (or (gt @root.combat.round roundHeld) turnLost group)}}
                        <a class="combatant-control {{#if isOnHold}}active{{/if}}" data-tooltip="SWADE.Hold"
                           data-action="toggleHold"><i class="fa-solid fa-hand-back-fist"></i></a>
                    {{/unless}}
                {{/if}}

                {{#if @root.user.isGM}}
                    {{#if (or isOnHold turnLost)}}
                        <a class="combatant-control {{#if turnLost}}active{{/if}}" data-tooltip="SWADE.LoseTurn"
                           data-action="toggleTurnLost"><i class="fa-solid fa-ban"></i></a>
                    {{/if}}

                    {{#if isOnHold}}
                        {{#unless (and (eq @root.combat.round roundHeld) active)}}
                            <a class="combatant-control active" data-tooltip="SWADE.ActBeforeCurrentCombatant"
                               data-action="actNow"><i class="fa-solid fa-long-arrow-alt-right"></i></a>
                            <a class="combatant-control active" data-tooltip="SWADE.ActAfterCurrentCombatant"
                               data-action="actAfter"><i class="fa-solid fa-level-down-alt"></i></a>
                        {{/unless}}
                    {{/if}}
                {{/if}}
            {{/if}}
            {{!-- Foundry TODO: Target Control --}}
            <div class="token-effects" data-tooltip="{{ effects.tooltip }}">
                {{#each effects.icons}}
                    <img class="token-effect" src="{{ img }}" alt="{{ name }}">
                {{/each}}
            </div>
        </div>
    </div>

    {{!-- Resource --}}
    {{#if resource includeZero=true}}
        <div class="token-resource">
            <span class="resource">{{ resource }}</span>
        </div>
    {{/if}}

    {{#unless group}}
    {{!-- Initiative --}}
        <div class="token-initiative">
            {{#if roundHeld}}
                <span class="initiative"><i class="fa-solid fa-hand-back-fist"></i></span>
            {{else if turnLost}}
                <span class="initiative"><i class="fa-solid fa-ban"></i></span>
            {{else if hasRolled}}
                {{#if canRedraw}}
                    <button type="button" class="combatant-control roll initiative 132" data-action="redrawInitiative"
                            data-tooltip="SWADE.Redraw"
                            aria-label="{{localize 'SWADE.Redraw'}}">{{{cardString}}}</button>
                {{else}}
                    <span class="initiative">{{{cardString}}}</span>
                {{/if}}
            {{else if (and canDrawInit (not initiative))}}
                <button type="button" class="combatant-control roll" data-action="rollInitiative"
                        data-tooltip="SWADE.DrawInit" aria-label="{{localize 'SWADE.DrawInit'}}"></button>
            {{else}}
                <span class="initiative"></span>
            {{/if}}
        </div>
    {{/unless}}
</li>
